<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleContentDescription">Value</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">Value</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/default_edittext_background</item>
    </style>

    <style name="FocusEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
